{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "types": ["node"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "files": ["src/index.ts"],
  "exclude": ["node_modules", "__test__", "dist", "**/*spec.ts"]
}
